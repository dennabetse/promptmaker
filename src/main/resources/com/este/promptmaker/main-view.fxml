                    <Insets top="5.0" />
                </GridPane.margin>
            </Label>
            <TextArea fx:id="detailsArea" style="-fx-font-size: 13;" GridPane.rowIndex="9" />
            <Label text="%key27" GridPane.rowIndex="10">
                <GridPane.margin>
                    <Insets top="5.0" />
                </GridPane.margin>
            </Label>
            <TextField fx:id="submitterField" style="-fx-font-size: 13;" GridPane.rowIndex="11" />
