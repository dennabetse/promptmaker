                <TextField fx:id="filenameField" style="-fx-font-size: 13;" visible="false" HBox.hgrow="SOMETIMES" />
            </HBox>
            <Label text="%key17" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets top="10.0" />
                </GridPane.margin>
            </Label>
            <TextField fx:id="questionField" style="-fx-font-size: 13;" GridPane.rowIndex="2" />
            <VBox fx:id="imageTypeBox" spacing="5.0" GridPane.rowIndex="3">
                <Label text="%key18" />
                <HBox spacing="5.0" style="-fx-border-style: dashed;">
                    <Button minWidth="77.0" mnemonicParsing="false" onAction="#selectImage" text="%key19" />
