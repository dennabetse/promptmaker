                        <HBox.margin>
                            <Insets top="5.0" />
                        </HBox.margin>
                    </Label>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
                <HBox fx:id="resizeBox" visible="false">
                    <CheckBox fx:id="resizeImage" mnemonicParsing="false" text="%key20" />
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
                <GridPane.margin>
                    <Insets top="5.0" />
