            <Button mnemonicParsing="false" onAction="#generateJson" text="%key31" />
            <Button mnemonicParsing="false" onAction="#clear" text="%key32" GridPane.columnIndex="1" />
            <Button fx:id="unloadImageButton" mnemonicParsing="false" onAction="#unloadImage" text="%key33" visible="false" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
