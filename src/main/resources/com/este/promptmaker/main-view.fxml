                    <rowConstraints>
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
                <ScrollPane style="-fx-background: f8f8f8;" VBox.vgrow="SOMETIMES">
                    <VBox fx:id="tagsListBox" spacing="1.0" style="-fx-font-size: 13;">
                        <padding>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </padding>
                    </VBox>
                </ScrollPane>
                <GridPane.margin>
                    <Insets top="1.0" />
                </GridPane.margin>
            </VBox>
            <VBox fx:id="manualTagsBox" spacing="5.0" visible="false" GridPane.rowIndex="12">
                <Label text="%key30" />
                <TextArea fx:id="tagsInputArea" style="-fx-font-size: 13;" />
                <GridPane.margin>
                    <Insets top="5.0" />
                </GridPane.margin>
            </VBox>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
