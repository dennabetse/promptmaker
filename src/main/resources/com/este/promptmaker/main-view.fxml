<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.SeparatorMenuItem?>
<BorderPane prefHeight="728.0" prefWidth="512.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.este.promptmaker.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Tags">
                <MenuItem mnemonicParsing="false" onAction="#englishTags" text="English"/>
                <MenuItem mnemonicParsing="false" onAction="#frenchTags" text="French"/>
                <MenuItem mnemonicParsing="false" onAction="#germanTags" text="German"/>
                <MenuItem mnemonicParsing="false" onAction="#hungarianTags" text="Hungarian"/>
                <MenuItem mnemonicParsing="false" onAction="#spanishTags" text="Spanish"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Settings">
                <MenuItem mnemonicParsing="false" onAction="#automatedInput" text="Automated input"/>
                <MenuItem mnemonicParsing="false" onAction="#manualInput" text="Manual input"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" onAction="#outputFolderView" text="Output Folder"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" onAction="#about" text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints prefHeight="230.0"/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints prefHeight="250.0"/>
                <RowConstraints/>
            </rowConstraints>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox spacing="10.0">
                <Label minWidth="86.0" text="Type of prompt:"/>
                <ChoiceBox fx:id="promptType" minWidth="70.0" onAction="#promptType"/>
                <CheckBox fx:id="customFilename" minWidth="111.0" mnemonicParsing="false" onAction="#customFilename"
                          text="Custom filename"/>
                <TextField fx:id="filenameField" prefColumnCount="30" visible="false"/>
            </HBox>
            <Label text="Type the question" GridPane.rowIndex="1"/>
            <TextField fx:id="questionField" GridPane.rowIndex="2"/>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.rowIndex="3">
                <HBox fx:id="imageTypeBox" spacing="5.0">
                    <Button minWidth="84.0" mnemonicParsing="false" onAction="#selectImage" text="Select image">
                        <HBox.margin>
                            <Insets top="20.0"/>
                        </HBox.margin>
                    </Button>
                    <Label fx:id="selectedImagePath" text="...">
                        <HBox.margin>
                            <Insets top="25.0"/>
                        </HBox.margin>
                    </Label>
                </HBox>
                <CheckBox fx:id="resizeImage" mnemonicParsing="false" text="Resize image (experimental)"/>
            </VBox>
            <VBox fx:id="textTypeBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" visible="false"
                  GridPane.rowIndex="3">
                <Label text="Text content"/>
                <TextArea fx:id="textContentArea" prefHeight="200.0" prefWidth="200.0"/>
            </VBox>
            <Label text="Enter possible answer(s) (each on a separate line)" GridPane.rowIndex="4"/>
            <TextArea fx:id="answersArea" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="5"/>
            <Label text="Enter possible short(s) (separated by a comma &quot;,&quot;) (optional)"
                   GridPane.rowIndex="6"/>
            <TextField fx:id="shorthandsField" GridPane.rowIndex="7"/>
            <Label text="Details (optional)" GridPane.rowIndex="8"/>
            <TextArea fx:id="detailsArea" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="9"/>
            <Label text="Submitter name (optional)" GridPane.rowIndex="10"/>
            <TextField fx:id="submitterField" GridPane.rowIndex="11"/>
            <VBox fx:id="manualTagsBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" visible="false"
                  GridPane.rowIndex="12">
                <Label text="Enter the tags the prompt should be in (each on a separate line)"/>
                <TextArea fx:id="tagsInputArea" prefHeight="200.0" prefWidth="200.0"/>
            </VBox>
            <VBox fx:id="automatedTagsBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.rowIndex="12">
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Select the tags the prompt should be in"/>
                    <Button minWidth="41.0" mnemonicParsing="false" onAction="#reset" style="-fx-font-size: 11;"
                            text="Reset" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
                </GridPane>
                <ScrollPane prefHeight="200.0" prefWidth="200.0" style="-fx-background: #f8f8f8;">
                    <VBox fx:id="tagsListBox" spacing="5.0" style="-fx-font-size: 13;">
                        <padding>
                            <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </VBox>
            <GridPane hgap="10.0" GridPane.rowIndex="13">
                <columnConstraints>
                    <ColumnConstraints minWidth="97.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="43.0"/>
                    <ColumnConstraints minWidth="91.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Button minWidth="97.0" mnemonicParsing="false" onAction="#generateJson" text="Generate JSON"/>
                <Button minWidth="43.0" mnemonicParsing="false" onAction="#clear" text="Clear"
                        GridPane.columnIndex="1"/>
                <Button fx:id="unloadImageButton" minWidth="91.0" mnemonicParsing="false" onAction="#unloadImage"
                        text="Unload Image"
                        GridPane.columnIndex="2" GridPane.halignment="RIGHT" visible="false"/>
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
                <padding>
                    <Insets bottom="10.0" top="10.0"/>
                </padding>
            </GridPane>
        </GridPane>
    </center>
</BorderPane>
